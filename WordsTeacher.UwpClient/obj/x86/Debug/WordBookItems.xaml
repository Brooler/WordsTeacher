<Page x:ConnectionId='1'
    x:Class="WordsTeacher.UwpClient.WordBookItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WordsTeacher.UwpClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:WordsTeacher.UwpClient.ViewModels">
    <Page.Resources>
        <DataTemplate x:Key="ImageTextListMailFolderTemplate"                                         >
            <Grid x:ConnectionId='2' Width="700">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:ConnectionId='5'                       Style="{StaticResource BaseTextBlockStyle}"
                        Margin="8,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                    <TextBlock x:ConnectionId='6'                               Style="{StaticResource BaseTextBlockStyle}"
                        Margin="8,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                    <TextBlock x:ConnectionId='7'                                Style="{StaticResource BaseTextBlockStyle}"
                        Margin="8,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                    <TextBlock x:ConnectionId='8'                             Style="{StaticResource BaseTextBlockStyle}"
                        Margin="8,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                </StackPanel>
                <CommandBar Background="Transparent" IsOpen="False" Width="200" HorizontalAlignment="Right">
                    <AppBarButton x:ConnectionId='3' Icon="Add" Label="Add Word Card"                           />
                    <AppBarButton x:ConnectionId='4' Icon="Edit" Label="Edit Book"                             />
                </CommandBar>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <ListView x:ConnectionId='9'                              ItemTemplate="{StaticResource ImageTextListMailFolderTemplate}" SelectionMode="Multiple"/>
            <Button Content="Begin Learning" FontSize="18" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>

